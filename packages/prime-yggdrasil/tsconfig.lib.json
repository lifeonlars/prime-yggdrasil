{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "composite": false
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/main.tsx",
    "src/App.tsx",
    "src/pages/**/*",
    "src/assets/**/*",
    "src/stories/**/*"
  ]
}
