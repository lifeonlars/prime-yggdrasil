{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/lifeonlars/prime-yggdrasil/schemas/doc-metadata.schema.json",
  "title": "Prime Yggdrasil Documentation Metadata",
  "description": "Schema for YAML frontmatter in documentation files to enable machine-readable indexing",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Human-readable title of the document",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "enum": ["guide", "reference", "agent", "tutorial"],
      "description": "Document category for organization"
    },
    "tags": {
      "type": "array",
      "description": "Keywords for search and discovery",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "audience": {
      "type": "string",
      "enum": ["developer", "ai-agent", "designer", "qa"],
      "description": "Primary intended audience"
    },
    "version": {
      "type": "string",
      "description": "Design system version this doc applies to",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "description": "Date of last significant update",
      "format": "date"
    },
    "relatedDocs": {
      "type": "array",
      "description": "Related documentation files (relative paths)",
      "items": {
        "type": "string",
        "pattern": ".*\\.md$"
      },
      "uniqueItems": true
    },
    "deprecated": {
      "type": "boolean",
      "description": "Mark document as deprecated",
      "default": false
    }
  },
  "required": ["title", "category", "tags", "audience", "version", "lastUpdated"],
  "additionalProperties": false
}
